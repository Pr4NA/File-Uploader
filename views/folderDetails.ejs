<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <link rel="stylesheet" href="/styleInFolder.css">
  <title>Folder: <%= folder.title %></title>
</head>
<body>
  <h1 class="title">Folder: <%= folder.title %></h1>
  <a class="BackToHome" href="/">Back to Home</a>
  <h3>Files:</h3>
  <% if (folder.files.length > 0) { %>
    <!-- <div class="container"> -->
        <ul class="container">
            <% folder.files.forEach(file => { %>
              <li class="Files">
                <strong><%= file.title %></strong>
                <a href="<%= file.fileUrl %>" download>Download</a>
                <br>
                <form action="/folder/<%= folder.id %>/deleteFile/<%= file.id %>" method="POST" style="display:inline;">
                  <button type="submit" onclick="return confirm('Are you sure you want to delete this file?');">Delete</button>
                </form>
              </li>
            <% }) %>
          </ul>
    <!-- </div> -->
  <% } else { %>
    <p>No files in this folder.</p>
  <% } %>
  <div class="conclusion">
    Create new file:
    <a href="/folder/<%= folder.id %>/addFile">Click here!!</a>
  </div>
</body>
</html>
